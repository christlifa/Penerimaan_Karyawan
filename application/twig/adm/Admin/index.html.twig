{% extends 'adm/layout.html.twig' %}

{% block content %}
<style type="text/css">
  
  .ng-cloak { 
    display: none !important;
  }

  .lcicon:hover {
    color: #337ab7;
  }
</style>	
<div class="row ng-cloak" ng-app="app" ng-controller="AdminController" ng-init="getData()">

    <div class="col-md-12" ng-show="mainGrid">
      <div class="box box-primary">
        
        <div class="box-body">

          <div class="col-md-6" style="padding-left: 0px;">
            <a class="btn btn-primary" ng-click="TambahButton()">
              <i class="fa fa-plus"></i> Tambah Data
            </a>
          </div>

          <div class="col-md-6 pull-right" style="padding-left: 0px;text-align: right;padding-right:0px;" >
            <i class="fa fa-refresh btn lcicon" aria-hidden="true" style="font-size:25px" title="Refresh" ng-click="getData()"></i>
          </div>
        </div>

        <div ui-grid="gridOptions1" ui-grid-pagination class="grid">
        </div>
      </div>
    </div>

    <div class="col-md-12" ng-show="detailForm">
      <div class="box box-primary">
        
        <div class="box-body">

          <form name="myForm">

              <div class="col-md-12" style="padding-left: 0px;">
                <button class="btn btn-primary" ng-click="simpanButton()" ng-disabled="myForm.$invalid">
                    <i class="glyphicon glyphicon-ok"></i> Simpan
                </button>
                <a class="btn btn-default pull-right" ng-click="KembaliButton()">
                  <i class="fa fa-mail-reply"></i> Kembali
                </a>
              </div>
                
              <div class="col-md-12" style="padding-left: 0px;margin-top: 15px;">
                  <div class="col-md-4" style="padding-left: 0px;">
                    <div class="form-group">
                      <label>Username</label><label style="color: red;"> *</label>
                      <input class="form-control" name="Username" required type="text" ng-model="mData.Username" placeholder="Username" maxlength="15">
                      <input class="form-control" name="LoginId" type="text" ng-model="mData.LoginId" placeholder="LoginId" ng-hide="true">
                    </div>
                  </div>
              </div>
              <div class="col-md-12" style="padding-left: 0px;margin-top: 15px;">
                  <div class="col-md-4" style="padding-left: 0px;">
                    <div class="form-group">
                      <label>Password</label><label style="color: red;"> *</label>
                      <input class="form-control" name="Password" required type="password" ng-model="mData.Password" placeholder="Password" maxlength="15">
                    </div>
                  </div>
              </div>
          </form>
          

      </div>
    </div>


</div>

</div>

{% endblock  %}

{% block add_javascript %}
	{{ parent() }}

	<!-- <script type="text/javascript" src="{{ base_url('assets/js/app/mesin.js') }}"></script> -->

  <script type="text/javascript" src="{{ base_url('assets/js/app/Admin/AdminController.js') }}"></script>
  <script type="text/javascript" src="{{ base_url('assets/js/app/Admin/AdminFactory.js') }}"></script>
  <script type="text/javascript" src="{{ base_url('assets/js/freamwork.js') }}"></script>
{% endblock  %}
