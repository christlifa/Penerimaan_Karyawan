{% extends 'adm/layout.html.twig' %}

{% block content %}
<style type="text/css">
  #the-canvas {
    border: 1px solid black;
    direction: ltr;
  }    
</style>
<div class="row" ng-app="app" ng-controller="dashboardController">

    <div class="col-md-12">
      <div class="box box-primary">
        <div class="col-md-12" style="padding-right: 0px;padding-left: 0px;">
          <img style="width: 100%;height: 270px;" src="{{ base_url('assets/images/logo/cls.png') }}">
        </div>
        <div class="box-body">

          <!-- Ini Dashboard -->
          <div class="col-md-6">
            <div class="col-md-12" style="text-align: center;"><h4>Jumlah Pelamar Disetiap Lowongan</h4></div>
            <canvas id="pie" class="chart chart-pie"
              chart-data="data" chart-labels="labels" chart-options="options">
            </canvas>
          </div>
          <div class="col-md-6">

            <div class="col-md-12" style="text-align: center;"><h4>Jumlah Interview</h4></div>
            <canvas id="base" class="chart-bar"
              chart-data="data2" chart-labels="labels2" chart-colors="colors"
              chart-dataset-override="datasetOverride" >
            </canvas>
          </div>
          <hr>
          <!-- <div class="col-md-12">

            <button ng-click="click()">test</button>
          </div> -->
        </div>
        
        
        
        
      </div>
    </div>
</div>

{% endblock  %}

